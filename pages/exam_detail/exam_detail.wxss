/* pages/exam_detail/exam_detail.wxss */

.type {
    position: relative;
    left: 300rpx;
    font-size: x-large;
    margin-bottom: 50rpx;
}

.option_containner {
    margin-top: 50rpx;
    margin-bottom: 50rpx;
    border-top: solid #E2E1E6 4rpx;
}

.option_item {
    border-bottom: solid #E2E1E6 4rpx;
    height: 150rpx;
    font-size: large;
    display: flex;
    align-items: center;
    padding-inline: 30rpx;

}

.option_item>image {
    width: 80rpx;
    height: 80rpx;
    margin-right: 50rpx;
}

.option_item>text {
    height: 150rpx;
    width: 500rpx;
    display: flex;
    align-items: center;
    font-size: 90%;
}

.ans {
    display: flex;
    justify-content: space-around;
    border: solid 2rpx;
    height: 130rpx;
    border-radius: 35rpx;
    background-color: rgb(235, 255, 240);
    margin-left: 50rpx;
    margin-right: 50rpx;
    margin-bottom: 100rpx;
}

.ans view {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.question {
    font-size: large;
    margin: 20rpx 40rpx;
}

.judge_containner {
    display: flex;
    justify-content: space-around;
}

.judge_containner>image {
    width: 200rpx;
    height: 200rpx;
}

.star {
    width: 80rpx;
    height: 104rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: small;
    position: relative;
    left: 514rpx;
    top: 0rpx;
}

.star>image {
    height: 60rpx;
    width: 60rpx;
}