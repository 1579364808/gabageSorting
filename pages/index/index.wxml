<van-uploader bind:after-read="img_recog_onClick">
    <image src="/icons/photo.png" style="width: 166rpx; height: 136rpx; display: inline-block; box-sizing: border-box; position: relative; left: 75rpx; top: 4rpx"></image>
    <view class="text1">拍照识别</view>
